generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  phone     Int?      @unique
  username  String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model dbAdArea {
  id  Int    @id @default(autoincrement())
  src String
  alt String
}

model dbBannerCategory {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model dbBannerItem {
  id                 Int    @id @default(autoincrement())
  name               String
  bannerDBCategoryId Int
}

model dbCommunityPost {
  id        Int      @id @default(autoincrement())
  title     String
  nickname  String
  password  String
  content   String   @db.Text
  thumb     Int      @default(0)
  createdAt DateTime @default(now())
  views     Int      @default(0)
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  nickname  String
  password  String
  createdAt DateTime @default(now())
  postId    Int
}

model dbAnonymousPost {
  id        Int      @id @default(autoincrement())
  title     String
  nickname  String
  password  String
  content   String   @db.Text
  thumb     Int      @default(0)
  createdAt DateTime @default(now())
  views     Int      @default(0)
}

model CommentAnonymous {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  nickname  String
  password  String
  createdAt DateTime @default(now())
  postId    Int
}

model dbNotice {
  id        Int      @id @default(autoincrement())
  title     String
  nickname  String
  content   String   @db.Text
  createdAt DateTime @default(now())
  views     Int      @default(0)
}

model dbStoreName {
  id       Int              @id @default(autoincrement())
  name     String
  products dbStoreProduct[]
}

model dbStoreCategory {
  id       Int              @id @default(autoincrement())
  name     String
  products dbStoreProduct[]
}

model dbStoreProduct {
  id          Int             @id @default(autoincrement())
  name        String
  price       String
  imageUrl    String?
  description String
  categoryId  Int
  storeId     Int
  views       Int             @default(0)
  category    dbStoreCategory @relation(fields: [categoryId], references: [id])
  store       dbStoreName     @relation(fields: [storeId], references: [id])
  orders      dbOrder[] // 여러 주문에 하나의 상품이 포함될 수 있습니다

  @@index([categoryId])
  @@index([storeId])
}

model dbOrder {
  id           Int             @id @default(autoincrement())
  orderId      String          @unique
  orderName    String
  status       String
  total        String
  createdAt    DateTime        @default(now())
  productId    Int
  products     dbStoreProduct  @relation(fields: [productId], references: [id])
  customerInfo dbCustomerInfo? // 이제 이 필드는 선택적입니다.

  @@index([productId])
}

model dbCustomerInfo {
  id            Int     @id @default(autoincrement())
  name          String
  phone         String
  email         String
  password      String
  recipient     String
  contact1      String
  contact2      String
  address       String
  deliveryNote  String?
  paymentMethod String?
  orderId       Int     @unique
  order         dbOrder @relation(fields: [orderId], references: [id])

  @@index([orderId])
}
