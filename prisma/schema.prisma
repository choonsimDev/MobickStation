generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  phone     Int?      @unique
  username  String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

//AdAreaDB
model dbAdArea {
  id  Int    @id @default(autoincrement())
  src String
  alt String
}

//BannerDB
model dbBannerCategory {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model dbBannerItem {
  id                 Int    @id @default(autoincrement())
  name               String
  bannerDBCategoryId Int
}

// //CommunityDB
model dbCommunityOtaverseDetail {
  id       Int      @id @default(autoincrement())
  imageUrl String
  title    String
  detail   String?
  date     DateTime
  view     Int? // OtaverseDetails2에서 사용되는 'view' 필드
}

model dbCommunityPost {
  id       Int      @id @default(autoincrement())
  category String?
  title    String
  password String?
  content  String
  thumb    Int      @default(0)
  date     DateTime
}

